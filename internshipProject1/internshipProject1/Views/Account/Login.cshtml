@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class= "row">
    <div class= "col-4 offset-4">
        <h1 class=" display-4 border-bottom text-center pb-2"> @ViewData["Title"] </h1>
    </div>
</div>
<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control form-container" placeholder="murat" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for ="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control form-container" placeholder="P@ssw0rd!" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-right-to-bracket me-2"></i>Login</button>
            </div>
        </form>
    </div>
</div>
<style>
    /* CSS kodlarını buraya yazın */
    /* styles.css */

    .form-container {
        padding: 10px;
        background-color: #000;
        color: #fff;
        border-width: 2px;
        border-style: solid;
        border-image: linear-gradient(45deg, red, white);
        border-image-slice: 1;
    }


    .layouter {
        border: 1px solid;
        border-image: linear-gradient(45deg, transparent, transparent), linear-gradient(45deg, red, white);
        border-image-slice: 1;
        padding: 10px;
        background-color: #100e0e;
        color: #fff;
        border-radius: 10px;
    }

</style>